        <<abstract>>
    }
    class WorkOrderQueryHandler {
        +Handle(WorkOrderByNumberQuery) WorkOrder
    }
    class EmployeeQueryHandler {
        +Handle(EmployeeByUserNameQuery) Employee
    }
    class StateCommandHandler {
        +Handle(IStateCommand) StateCommandResult
    }
    class WorkOrderSearchHandler {
        +Handle(WorkOrderSpecificationQuery) IEnumerable
    }
