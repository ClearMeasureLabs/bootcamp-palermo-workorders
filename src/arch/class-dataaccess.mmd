        +DbSet~WorkOrder~ WorkOrders
        +DbSet~Employee~ Employees
        +DbSet~Role~ Roles
        +OnModelCreating(ModelBuilder) void
        +SaveChanges() int
    }
    class WorkOrderMap {
        +Configure(EntityTypeBuilder) void
    }
    class EmployeeMap {
        +Configure(EntityTypeBuilder) void
    }
    class RoleMap {
        +Configure(EntityTypeBuilder) void
    }
