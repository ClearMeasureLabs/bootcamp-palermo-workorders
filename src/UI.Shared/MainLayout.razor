@inherits Palermo.BlazorMvc.MvcLayoutComponentBase
@using Microsoft.Extensions.Configuration
@inject IJSRuntime JSRuntime
@inject CustomAuthenticationStateProvider AuthStateProvider
@inject NavigationManager NavigationManager
@inject IConfiguration Configuration
@implements IAsyncDisposable

<div class="modern-app">
    <aside class="modern-sidebar">
        <div class="sidebar-header">
            <div class="church-brand">
                <div class="church-icon">
                    <i class="bi bi-building" aria-hidden="true"></i>
                </div>
                <div class="brand-text">
                    <h4>First Church</h4>
                    <span>Springfield</span>
                </div>
            </div>
        </div>
        <nav class="sidebar-nav">
            <NavMenu/>
        </nav>
        <div class="sidebar-footer">
            <HealthCheckLink/>
        </div>
    </aside>

    <div class="main-container">
        <header class="modern-header">
            <div class="header-content">
                <div class="header-title">
                    <h3>Work Order Management</h3>
                    <span class="subtitle">Church Maintenance Portal</span>
                </div>
                <div class="header-actions">
                    <AuthorizeView>
                        <Authorized>
                            <div class="user-section">
                                <Logout/>
                            </div>
                        </Authorized>
                        <NotAuthorized>
                            <div class="auth-section">
                                <LoginLink/>
                            </div>
                        </NotAuthorized>
                    </AuthorizeView>
                </div>
            </div>
        </header>

        <main class="modern-main">
            <div class="content-wrapper">
                @Body
            </div>
        </main>
    </div>
</div>

<InactivityWarningModal IsVisible="showWarning" 
                        RemainingSeconds="10" 
                        OnStayLoggedIn="HandleStayLoggedIn"/>

@code {
    private DotNetObjectReference<MainLayout>? dotNetReference;
    private bool showWarning = false;
    private int timeoutSeconds = 60;
    private int warningSeconds = 50;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            timeoutSeconds = Configuration.GetValue<int>("InactivityTimeout:TimeoutSeconds", 60);
            warningSeconds = Configuration.GetValue<int>("InactivityTimeout:WarningSeconds", 50);

            if (AuthStateProvider.IsAuthenticated())
            {
                await InitializeInactivityTimer();
            }
        }
    }

    private async Task InitializeInactivityTimer()
    {
        dotNetReference = DotNetObjectReference.Create(this);
        await JSRuntime.InvokeVoidAsync("InactivityTimer.initialize", dotNetReference, timeoutSeconds, warningSeconds);
    }

    [JSInvokable]
    public void ShowWarning()
    {
        showWarning = true;
        InvokeAsync(StateHasChanged);
    }

    [JSInvokable]
    public void TriggerLogout()
    {
        showWarning = false;
        AuthStateProvider.Logout();
        Bus.Notify(new UserLoggedOutEvent(AuthStateProvider.GetUsername()));
        NavigationManager.NavigateTo("/", forceLoad: true);
    }

    private async Task HandleStayLoggedIn()
    {
        showWarning = false;
        await JSRuntime.InvokeVoidAsync("InactivityTimer.resetTimer");
        StateHasChanged();
    }

    public async ValueTask DisposeAsync()
    {
        if (dotNetReference != null)
        {
            await JSRuntime.InvokeVoidAsync("InactivityTimer.dispose");
            dotNetReference.Dispose();
        }
    }
}
